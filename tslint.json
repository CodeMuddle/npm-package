{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "no-console": [
            false
        ],
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            true,
            "LF"
        ],
        "quotemark": [
            true,
            "single"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "singleline": "never"
            }
        ],
        "arrow-parens": [
            true, 
            "ban-single-arg-parens"
        ]
    },
    "rulesDirectory": []
}